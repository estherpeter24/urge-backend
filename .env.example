# Application
APP_NAME=URGE
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8080

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/urge_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT & Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19000

# SMS/OTP (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=urge-media-bucket

# Firebase (for push notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# File Upload Limits (in bytes)
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MAX_DOCUMENT_SIZE=20971520

# Email (optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@urge.app

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Support
SUPPORT_EMAIL=support@urge.app
PRIVACY_POLICY_URL=https://urge.app/privacy
TERMS_URL=https://urge.app/terms
